{
  "compilerOptions": {
    "outDir": "",
    "jsx": "react",
    "target": "es5",
    "module": "ES2015",
    "lib": [
      "es2015",
      "dom",
      "scripthost",
      "dom.iterable"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "app": ["./src/app"],
      "common": ["./src/common"],
      "component": ["./src/component"],
      "store": ["./src/app/store"],
      "resource": ["./src/resource"]
    }
  },
  "include": ["src", "typings"],
  "exclude": ["node_modules"]
}
